---
import LayoutBase from "@layouts/LayoutBase.astro";
import Portfolio from "@components/Portfolio/Portfolio";
import { FontLoader } from "@components/FontLoader";
---

<LayoutBase>
  <FontLoader client:load>
    <main class="mt-24 wrapper">
      <div class="card">
        <Portfolio client:load />
      </div>
    </main>
  </FontLoader>
</LayoutBase>

<style is:inline>
  .dialog {
    position: fixed;
    top: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 100000;
  }

  .dialog img {
    box-shadow: 0 8px 6px -6px black;
    width: 80vw;
    height: auto;
  }

  .portfolio-item {
    overflow: hidden;
  }
</style>
