<!-- src/components/TechStack.astro -->
---
// Tech Stack Component - displays technologies with icons
---

<div class="h-full flex flex-col">
  <div class="text-center mb-4">
    <h2 class="text-xl font-semibold text-white mb-2">
      Tech Stack
    </h2>
    <p class="text-smoke-300 text-sm">
      Technologies I work most often with
    </p>
  </div>
  
<div class="flex-1 flex flex-col justify-center">
    <div class="grid grid-cols-4 gap-3">
      <!-- TypeScript -->
      <div class="flex flex-col items-center group">
        <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
          <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/typescript.svg" class="w-6 h-6 filter brightness-0 invert" alt="TypeScript" />
        </div>
        <span class="text-xs text-smoke-400 mt-1">TypeScript</span>
      </div>

      <!-- React -->
      <div class="flex flex-col items-center group">
        <div class="w-10 h-10 bg-cyan-500 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
          <img src="https://cdn.jsdelivr.net/npm/simple-icons@v9/icons/react.svg" class="w-6 h-6 filter brightness-0 invert" alt="React" />
        </div>
        <span class="text-xs text-smoke-400 mt-1">React</span>
      </div>

      <!-- Vue -->
