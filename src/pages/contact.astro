---
import LayoutBase from "@layouts/LayoutBase.astro";
import Avatar from "@images/brand/dc_profile.jpg";
import SocialsHeadless from "@components/Headless/SocialNav.astro";
import { Image } from "astro:assets";
import LogoIcon from "@icons/dc_glasses.svg?raw";
---

<LayoutBase>
  <header
    class="flex flex-col md:space-y-4 px-12 mt-20 mb-4 justify-center text-center"
  >
    <h1 class="text-3xl text:xs-3xl md:text-6xl font-semibold text-white">
      <div class="flex justify-center">
        <Image
          loading="eager"
          src={Avatar}
          alt="David Cotelessa"
          class="rounded-full w-32 xl:w-48 border-smoke-950 border-4"
          transition:name={"dc-avatar"}
        />
      </div>
      <div class="flex justify-center items-center gap-2">
        <span>David</span>
        <Fragment set:html={LogoIcon} />
        <span>Cotelessa</span>
      </div>
    </h1>
    <p class="text-2xl md:text-4xl">Software Engineer, Front End.</p>
    <SocialsHeadless
      classNames={{
        ul: "flex flex-row space-x-3",
        li: "p-1",
        container: "flex flex-row justify-center p-1",
      }}
    />
  </header>
  <main class="wrapper mt-8">
    <div class="card">
      <p class="text-center">Under Construction</p>
    </div>
  </main>
</LayoutBase>
